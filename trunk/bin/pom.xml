<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>de.unikoblent.fgbks.spa.ngram.promplugin</groupId>
  <artifactId>ngram-prom-plugin</artifactId>
  <version>1.0-SNAPSHOT</version>

  <packaging>jar</packaging>

  <dependencies>
    <dependency>
      <groupId>de.unikoblenz.fgbks.spa.ngram</groupId>
      <artifactId>ngram</artifactId>
      <version>1.0-SNAPSHOT</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>org.junit.jupiter</groupId>
      <artifactId>junit-jupiter-engine</artifactId>
      <version>5.1.0</version>
      <scope>test</scope>
    </dependency>

    <!-- Prom Libs -->
    <dependency>
      <groupId>prom</groupId>
      <artifactId>openxes</artifactId>
      <scope>system</scope>
      <version>1.0</version>
      <systemPath>${project.basedir}/libs/OpenXES.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>prom</groupId>
      <artifactId>uitopia</artifactId>
      <scope>system</scope>
      <version>1.0</version>
      <systemPath>${project.basedir}/libs/Uitopia.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>prom</groupId>
      <artifactId>prom-framework</artifactId>
      <scope>system</scope>
      <version>1.0</version>
      <systemPath>${project.basedir}/libs/ProM-Framework.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>prom</groupId>
      <artifactId>prom-plugins</artifactId>
      <scope>system</scope>
      <version>1.0</version>
      <systemPath>${project.basedir}/libs/ProM-Plugins.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>prom</groupId>
      <artifactId>prom-context</artifactId>
      <scope>system</scope>
      <version>1.0</version>
      <systemPath>${project.basedir}/libs/ProM-Contexts.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>prom</groupId>
      <artifactId>prom-models</artifactId>
      <scope>system</scope>
      <version>1.0</version>
      <systemPath>${project.basedir}/libs/ProM-Models.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>prom</groupId>
      <artifactId>openxes</artifactId>
      <scope>system</scope>
      <version>1.0</version>
      <systemPath>${project.basedir}/libs/OpenXES.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>prom</groupId>
      <artifactId>bpmn</artifactId>
      <scope>system</scope>
      <version>1.0</version>
      <systemPath>${project.basedir}/libs/BPMN.jar</systemPath>
    </dependency>
  </dependencies>

  <build>
    <finalName>ngram-ProMPlugin</finalName>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.7.0</version>
        <configuration>
          <source>8</source>
          <target>8</target>
        </configuration>
      </plugin>

      <plugin>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>2.22.1</version>
      </plugin>

      <plugin>
        <groupId>com.coveo</groupId>
        <artifactId>fmt-maven-plugin</artifactId>
        <version>2.6.0</version>
        <executions>
          <execution>
            <goals>
              <goal>format</goal>
            </goals>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <descriptorRefs>
            <descriptorRef>jar-with-dependencies</descriptorRef>
          </descriptorRefs>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-javadoc-plugin</artifactId>
        <version>3.0.1</version>
      </plugin>
    </plugins>
  </build>

</project>